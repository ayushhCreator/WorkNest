# ================================
# WorkNest Environment Variables
# ================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ================================
# Server Configuration
# ================================
PORT=5000
NODE_ENV=development

# ================================
# Database
# ================================
# Local: mongodb://localhost:27017/worknest
# Docker: mongodb://mongo:27017/worknest
# Production: mongodb+srv://username:password@cluster.mongodb.net/worknest
MONGODB_URI=mongodb://localhost:27017/worknest

# ================================
# Redis (for caching and rate limiting)
# ================================
# Local: redis://localhost:6379
# Docker: redis://redis:6379
# Production: redis://username:password@your-redis-host:6379
REDIS_URI=redis://localhost:6379

# ================================
# JWT Authentication
# ================================
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-jwt-secret-here-generate-a-secure-random-string
JWT_EXPIRY=15m

# Refresh Token (separate secret for refresh tokens)
REFRESH_TOKEN_SECRET=your-refresh-token-secret-here-generate-another-secure-string
REFRESH_TOKEN_EXPIRY=7d
REFRESH_TOKEN_EXPIRY_DAYS=7

# ================================
# Client URL (for CORS and OAuth redirects)
# ================================
# Local: http://localhost:5173
# Production: https://your-domain.com
CLIENT_URL=http://localhost:5173

# ================================
# OAuth - Google (Optional)
# ================================
# Setup: https://console.cloud.google.com/apis/credentials
# Callback URL: {SERVER_URL}/api/auth/google/callback
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ================================
# OAuth - GitHub (Optional)
# ================================
# Setup: https://github.com/settings/developers
# Callback URL: {SERVER_URL}/api/auth/github/callback
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ================================
# Email - Brevo API (Recommended for production)
# ================================
# Get your API key from: https://app.brevo.com/settings/keys/api
BREVO_API_KEY=your-brevo-api-key-here
SMTP_FROM_EMAIL=ayushraj150103@gmail.com

# Legacy SMTP Configuration (not recommended for Render/cloud hosting)
# Use Brevo API instead to avoid SMTP port blocking issues
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password
SMTP_FROM=WorkNest <ayushraj150103@gmail.com>

# ================================
# Cloudinary (File Uploads) - Optional
# ================================
# Setup: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# ================================
# Slack Integration (Optional)
# ================================
# Setup: https://api.slack.com/apps
SLACK_CLIENT_ID=
SLACK_CLIENT_SECRET=
SLACK_SIGNING_SECRET=
